{
    "include": [
        "*.ts",
        "*.js",
        "*.tsx",
    ],
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "sourceMap": true,
        "outDir": "dist/js",
        "allowJs": true,
        "esModuleInterop": true,
        "types": [
            "vite/client",
            "leaflet.gridlayer.googlemutant"
        ],
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "react": [
                "./node_modules/preact/compat/"
            ],
            "react-dom": [
                "./node_modules/preact/compat/"
            ]
        }
    }
}